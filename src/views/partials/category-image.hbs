<div class="card">
  <div class="card-image">
    <figure class="image is-256x256">
      <img id="category-image" src={{category.img}}>
    </figure>
  </div>
  <div class="card-content">
    <form action="/category/{{category._id}}/uploadimage" method="POST" enctype="multipart/form-data">
      <div id="file-select" class="file has-name is-fullwidth">
        <label class="file-label"> <input class="file-input" name="imagefile" type="file" name="resume" accept="image/png, image/jpeg">
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a fileâ€¦
            </span>
           </span>
          <span class="file-name"></span>
        </label>
        <button type="submit" class="button is-info">Upload</button>
      </div>
    </form>
  </div>
</div>

<script>
  const fileInput = document.querySelector(".file-input");
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector(".file-name");
      fileName.textContent = fileInput.files[0].name;
    }
  };
</script>

<script>
  result = document.getElementById("category-image").getAttribute('src') === '';
  if (result === false) {
    delete_icon_html = '<a href="/category/{{category._id}}/deleteimage" class="button is-danger is-outlined"><i class="fas fa-trash"></i></a>';
    document.getElementById('file-select').innerHTML += delete_icon_html;
  }
</script>