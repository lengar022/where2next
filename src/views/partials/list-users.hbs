<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Role</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each allUsers}}
      <tr>
        <td>
          {{email}}
        </td>
        <td>
          {{firstName}}
        </td>
        <td>
          {{lastName}}
        </td>
        <td>
          {{scope}}
        </td>
        <td>
          <a href="/admin/deleteuser/{{_id}}" class="ui icon button is-danger is-outlined">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>